{
  "name": "rendot",
  "version": "1.0.0",
  "homepage": "https://github.com/tghgg/Ren'Dot",
  "description": "A parser that takes in a Ren'Py-like text script and parse it into a JSON file for importing into the Godot Dialogue System by radmatt",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "semistandard": "semistandard --fix",
    "pack_windows": "electron-builder -w",
    "pack_linux": "electron-builder -l"
  },
  "build": {
    "appId": "me.rendotparser.RenDot",
    "productName": "Ren'Dot",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "executableName": "Ren'Dot"
    },
    "win": {
      "target": "NSIS",
      "icon": "./assets/icon.ico"
    }
  },
  "author": "Falling Snowdin",
  "license": "MIT",
  "devDependencies": {
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "semistandard": "^14.2.0"
  }
}
