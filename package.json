{
  "name": "rendot",
  "version": "1.1.5",
  "homepage": "https://github.com/tghgg/rendot",
  "description": "A parser that takes in a Ren'Py-like text script and parse it into a JSON file for importing into the Godot Dialogue System by radmatt",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder -wl",
    "pack_windows": "electron-builder -w",
    "pack_linux": "electron-builder -l"
  },
  "build": {
    "appId": "me.rendotparser.RenDot",
    "productName": "RenDot",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "icon": "./assets/506x504.png",
      "executableName": "RenDot"
    },
    "win": {
      "target": "NSIS",
      "icon": "./assets/icon.ico"
    }
  },
  "author": "Falling Snowdin",
  "license": "MIT",
  "devDependencies": {
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1"
  }
}
